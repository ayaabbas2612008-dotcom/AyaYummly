<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_beige"
    tools:context=".RecipeDetailsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/bg_beige">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false"
            app:contentScrim="@color/brown_dark"
            android:background="@color/bg_beige">

            <FrameLayout
                android:id="@+id/imageContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/ivRecipe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/beige_mid"
                    android:contentDescription="@string/desc_recipe_image" />

                <TextView
                    android:id="@+id/tvPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good food = Good mood\n(Math never lies)\nA photo is missing,\nbut the flavor isnâ€™t."
                    android:textColor="#6B4F3A"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/ic_placeholder"
                    android:padding="16dp"
                    android:layout_gravity="center" />

            </FrameLayout>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/bg_beige"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/bg_beige"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="22dp"
            android:background="@color/bg_beige">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_recipe"
                android:textColor="@color/text_dark"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:background="@color/bg_beige"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/bg_beige"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tvChefName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chef_name"
                    android:textColor="@color/brown_dark"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="@color/bg_beige" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:background="@color/beige_line"
                    android:layout_marginHorizontal="12dp"/>

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_main_dish"
                    android:textColor="@color/text_mid"
                    android:textSize="15sp"
                    android:background="@color/bg_beige" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/beige_card"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp"
                    android:background="@color/beige_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:background="@color/beige_card">

                        <TextView
                            android:id="@+id/tvPrepTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/prep_time"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:background="@color/beige_card"/>

                        <TextView
                            android:id="@+id/tvCookTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/cook_time"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:background="@color/beige_card"/>


                        <TextView
                            android:id="@+id/tvTotalTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total_time"
                            android:textColor="@color/brown_dark"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:gravity="end"
                            android:background="@color/beige_card"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/beige_line"
                        android:layout_marginVertical="12dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:background="@color/beige_card"
                        android:layout_marginBottom="8dp">

                        <!-- LEVEL -->
                        <TextView
                            android:id="@+id/tvLevel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/level_easy"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:background="@color/beige_card"
                            android:padding="4dp" />

                        <!-- COOKING TIP -->
                        <TextView
                            android:id="@+id/tvCookingTip"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/cooking_tip"
                            android:textColor="@color/text_mid"
                            android:textSize="13sp"
                            android:background="@color/beige_card"
                            android:padding="4dp"
                            android:gravity="center"
                            android:lineSpacingExtra="2dp" />

                        <!-- SERVINGS -->
                        <TextView
                            android:id="@+id/tvServings"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/serves_two"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:background="@color/beige_card"
                            android:padding="4dp"
                            android:gravity="end" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- RATING CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                android:backgroundTint="@color/beige_card"
                app:strokeColor="@color/beige_line"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="4.5"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:progressTint="@color/gold"
                        android:secondaryProgressTint="@color/gold"
                        android:indeterminateTint="@color/gold"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvRatingValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textColor="@color/text_dark"
                        android:textSize="15sp"
                        android:paddingStart="4dp"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:text="@string/ingredients_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/brown_dark"
                android:background="@color/bg_beige"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tvIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ingredients_list"
                android:textColor="@color/text_dark"
                android:lineSpacingExtra="6dp"
                android:background="@color/bg_beige"
                android:layout_marginBottom="26dp"/>

            <TextView
                android:text="@string/steps_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/brown_dark"
                android:background="@color/bg_beige"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tvSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/steps_list"
                android:textColor="@color/text_dark"
                android:lineSpacingExtra="6dp"
                android:background="@color/bg_beige"
                android:layout_marginBottom="26dp"/>

            <TextView
                android:text="@string/notes_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/brown_dark"
                android:background="@color/bg_beige"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tvNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notes_text"
                android:textColor="@color/text_mid"
                android:fontStyle="italic"
                android:background="@color/bg_beige"
                android:layout_marginBottom="26dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStartCooking"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/start_cooking"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/green_dark"
                    android:textColor="@color/white"
                    app:cornerRadius="16dp"
                    android:layout_marginEnd="10dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStopCooking"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Stop"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    app:cornerRadius="16dp"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="20dp"
        android:src="@drawable/ic_favorite"
        app:tint="@color/bg_beige"
        app:backgroundTint="@color/brown_dark"
        android:contentDescription="@string/desc_favorite" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:src="@drawable/ic_share"
        app:tint="@color/bg_beige"
        app:backgroundTint="@color/brown_dark"
        android:contentDescription="@string/desc_share" />

</FrameLayout>
