<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/ivItemImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            android:background="#EEEEEE"
            android:contentDescription="Recipe Image"
            android:layout_marginBottom="12dp"/>
        <!-- ðŸ·ï¸ Recipe Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe Name"
            android:textSize="12sp"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/tvRecipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chocolate Cake"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="8dp" />

        <!-- ðŸ½ï¸ Cook & Category -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cook and Category"
            android:textSize="12sp"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/tvCookAndCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayoshka â€¢ Drinks"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="8dp" />

        <!-- âš™ï¸ Difficulty + Prep Time + Cook Time (Same Row) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Difficulty -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Difficulty"
                    android:textSize="12sp"
                    android:textColor="#888888" />

                <TextView
                    android:id="@+id/tvDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Easy"
                    android:textSize="14sp"
                    android:textColor="#616161" />
            </LinearLayout>

            <!-- Prep Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prep Time"
                    android:textSize="12sp"
                    android:textColor="#888888" />

                <TextView
                    android:id="@+id/tvPrepTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 min"
                    android:textSize="14sp"
                    android:textColor="#616161" />
            </LinearLayout>

            <!-- Cook Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cook Time"
                    android:textSize="12sp"
                    android:textColor="#888888" />

                <TextView
                    android:id="@+id/tvCookTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 min"
                    android:textSize="14sp"
                    android:textColor="#616161" />
            </LinearLayout>

        </LinearLayout>

        <!-- â­ Rating -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="10dp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp" />



    </LinearLayout>
</androidx.cardview.widget.CardView>
